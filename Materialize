<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js"></script>
<script type="text/javascript">
function CustomPrompt () {
    this.render = function(dialog) {
        var winW = window.innerWidth;
        var winH = window.innerHeight;
        var dialogOverlay = $("#dialogOverlay");
        var dialogBox = $("#dialogBox");
        dialogOverlay.css("display", "block");
        dialogOverlay.css("height", winH + "px")
        dialogBox.css("left", (winW/2) - (550 * .5) + "px")
        dialogBox.css("top", "100px")
        dialogBox.css("display", "block");
        $("#dialogBoxHead").html("CONFIRMATION: ");
        $("#dialogBoxBody").html(dialog + '<div class="row"><form class="col s12"><div class="row"><div class="input-field col s6"><i class="material-icons prefix">account_circle</i><input id="prompt_value1" type="text" class="validate"><label for="icon_prefix">First Name</label></div><div class="input-field col s6"><i class="material-icons prefix">phone</i><input id="prompt_value2" type="tel" class="validate"><label for="icon_telephone">Telephone</label></div></div></form></div>');
        $("#dialogBoxFoot").html('<button class="waves-effect waves-light btn" onclick="Prompt.ok()">OK</button>' + '&nbsp &nbsp' + '<button class="waves-effect waves-light btn" onclick="Prompt.cancel()">Cancel</button>');
    }

   this.cancel = function() {
    $("#dialogBox").css("display", "none");
    $("#dialogOverlay").css("display", "none")
       }

    this.ok = function() {
      var prompt_value1 = $("#prompt_value1").val();
      var prompt_value2 = $("#prompt_value2").val();
      //ENTER WHATEVER YOU WANT HERE
      $("#promptText").html(prompt_value1);
      $("#promptText2").html(prompt_value2)
      //TO HERE
      $("#dialogBox").css("display", "none");
    $("#dialogOverlay").css("display", "none")
    }
}
var Prompt = new CustomPrompt();

  $("#promptButton").on("click", function() {
    Prompt.render("Enter whatever you want");
  })


// $("#tradAlert").on("click", alert("This is a boring alert box"));
// $("#newAlert").on("click", Alert.render());
</script>
</html>
